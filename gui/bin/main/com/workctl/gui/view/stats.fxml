<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.workctl.gui.controller.StatsController"
      spacing="18">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- ================= BASIC STATS ================= -->

    <Label text="Project Statistics"
           style="-fx-font-size: 20; -fx-font-weight: bold;"/>

    <Label fx:id="totalLabel" text="Total: 0"/>
    <Label fx:id="openLabel" text="Open: 0"/>
    <Label fx:id="progressLabel" text="In Progress: 0"/>
    <Label fx:id="doneLabel" text="Done: 0"/>

    <!-- ================= COMPLETION ================= -->

    <ProgressBar fx:id="completionBar"
                 prefWidth="420"/>

    <Label fx:id="completionPercentLabel"
           style="-fx-font-weight: bold;"/>

    <!-- ================= STAGNATION ================= -->

    <Label fx:id="stagnationWarningLabel"
           wrapText="true"
           style="-fx-font-weight: bold; -fx-text-fill: red;" />

    <!-- ================= PRODUCTIVITY ================= -->

    <Label text="Productivity Score"
           style="-fx-font-size:16; -fx-font-weight:bold;" />

    <ProgressBar fx:id="productivityBar"
                 prefWidth="420"/>

    <Label fx:id="productivityLabel"
           style="-fx-font-weight: bold;" />

    <!-- ================= HEATMAP ================= -->

    <Label text="Activity Heatmap (Last 30 Days)"
           style="-fx-font-size:16; -fx-font-weight:bold;" />

    <GridPane fx:id="heatmapGrid"
              hgap="4"
              vgap="4"/>

</VBox>
