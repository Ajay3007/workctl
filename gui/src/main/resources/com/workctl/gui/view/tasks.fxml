<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.workctl.gui.controller.TaskController"
      spacing="0"
      styleClass="kanban-root">

    <!-- ========================= -->
    <!-- Toolbar                   -->
    <!-- ========================= -->
    <HBox spacing="12" alignment="CENTER_LEFT"
          styleClass="kanban-toolbar"
          style="-fx-padding: 10 16 10 16;">

        <Button text="+ Add Task"
                onAction="#handleAddTask"
                styleClass="add-task-btn"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Label text="&#128269;" styleClass="search-icon"/>

        <TextField fx:id="searchField"
                   promptText="Search tasks&#8230;"
                   prefWidth="240"
                   styleClass="search-field"/>

        <Button fx:id="clearSearchBtn"
                text="&#10005;"
                onAction="#handleClearSearch"
                styleClass="clear-search-btn"/>

    </HBox>

    <!-- ========================= -->
    <!-- Kanban Board              -->
    <!-- ========================= -->
    <HBox spacing="14" VBox.vgrow="ALWAYS"
          styleClass="kanban-board"
          style="-fx-padding: 14;">

        <!-- OPEN column -->
        <VBox HBox.hgrow="ALWAYS" spacing="0" styleClass="kanban-column">
            <HBox alignment="CENTER_LEFT" spacing="8" styleClass="kanban-col-header"
                  style="-fx-padding: 10 14 10 14;">
                <Label text="&#9679;" style="-fx-text-fill: #fc8181; -fx-font-size: 10;"/>
                <Label fx:id="openCountLabel" text="Open (0)" styleClass="kanban-col-title"/>
            </HBox>
            <ScrollPane fx:id="openScroll" fitToWidth="true" VBox.vgrow="ALWAYS"
                        styleClass="kanban-col-scroll">
                <VBox fx:id="openColumn" spacing="8" style="-fx-padding: 10;"/>
            </ScrollPane>
        </VBox>

        <!-- IN PROGRESS column -->
        <VBox HBox.hgrow="ALWAYS" spacing="0" styleClass="kanban-column">
            <HBox alignment="CENTER_LEFT" spacing="8" styleClass="kanban-col-header"
                  style="-fx-padding: 10 14 10 14;">
                <Label text="&#9679;" style="-fx-text-fill: #f6ad55; -fx-font-size: 10;"/>
                <Label fx:id="inProgressCountLabel" text="In Progress (0)" styleClass="kanban-col-title"/>
            </HBox>
            <ScrollPane fx:id="inProgressScroll" fitToWidth="true" VBox.vgrow="ALWAYS"
                        styleClass="kanban-col-scroll">
                <VBox fx:id="inProgressColumn" spacing="8" style="-fx-padding: 10;"/>
            </ScrollPane>
        </VBox>

        <!-- DONE column -->
        <VBox HBox.hgrow="ALWAYS" spacing="0" styleClass="kanban-column">
            <HBox alignment="CENTER_LEFT" spacing="8" styleClass="kanban-col-header"
                  style="-fx-padding: 10 14 10 14;">
                <Label text="&#9679;" style="-fx-text-fill: #68d391; -fx-font-size: 10;"/>
                <Label fx:id="doneCountLabel" text="Done (0)" styleClass="kanban-col-title"/>
            </HBox>
            <ScrollPane fx:id="doneScroll" fitToWidth="true" VBox.vgrow="ALWAYS"
                        styleClass="kanban-col-scroll">
                <VBox fx:id="doneColumn" spacing="8" style="-fx-padding: 10;"/>
            </ScrollPane>
        </VBox>

    </HBox>

</VBox>
