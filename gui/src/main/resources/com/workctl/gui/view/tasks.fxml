<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.workctl.gui.controller.TaskController"
      spacing="15">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <!-- ========================= -->
    <!-- Add Task Toolbar -->
    <!-- ========================= -->
    <HBox spacing="15" alignment="CENTER_LEFT">

        <Button text="+ Add Task"
                onAction="#handleAddTask"
                style="-fx-font-weight: bold;
                       -fx-background-radius: 6;
                       -fx-padding: 6 14 6 14;" />

        <Label text="Create a detailed task with Markdown support and priority."
               style="-fx-text-fill: #666666;" />

    </HBox>


    <!-- ========================= -->
    <!-- Kanban Board -->
    <!-- ========================= -->
    <HBox spacing="20">

        <!-- OPEN -->
        <VBox prefWidth="320">
            <Label fx:id="openCountLabel"
                   text="Open (0)"
                   style="-fx-font-weight: bold; -fx-font-size: 14;" />

            <ScrollPane fx:id="openScroll"
                        fitToWidth="true"
                        prefHeight="600">

                <VBox fx:id="openColumn"
                      spacing="8"
                      style="-fx-padding: 5;" />
            </ScrollPane>
        </VBox>

        <!-- IN PROGRESS -->
        <VBox prefWidth="320">
            <Label fx:id="inProgressCountLabel"
                   text="In Progress (0)"
                   style="-fx-font-weight: bold; -fx-font-size: 14;" />

            <ScrollPane fx:id="inProgressScroll"
                        fitToWidth="true"
                        prefHeight="600">

                <VBox fx:id="inProgressColumn"
                      spacing="8"
                      style="-fx-padding: 5;" />
            </ScrollPane>
        </VBox>

        <!-- DONE -->
        <VBox prefWidth="320">
            <Label fx:id="doneCountLabel"
                   text="Done (0)"
                   style="-fx-font-weight: bold; -fx-font-size: 14;" />

            <ScrollPane fx:id="doneScroll"
                        fitToWidth="true"
                        prefHeight="600">

                <VBox fx:id="doneColumn"
                      spacing="8"
                      style="-fx-padding: 5;" />
            </ScrollPane>
        </VBox>

    </HBox>

</VBox>
